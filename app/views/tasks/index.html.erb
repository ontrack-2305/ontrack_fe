<div class="container text-center py-3">
<h1>All Tasks</h1>
</div>

<div class="row justify-content-center">
  <div class="col-4">
    <% @tasks.each do |task| %>
      <div id="task-<%= task.id %>">
        <%= link_to task.name, task_path(task.id), class: "btn btn-secondary rounded-soft" %>
      </div><br>
    <% end %>
  </div>

  <div class="col-4">
    <%= form_with url: tasks_path, method: :get do |form| %>
      <%= form.select :frequency, options_for_select(["Select Frequency", :once, :daily, :weekly, :monthly, :annual], (@filters[:frequency] || "Select Frequency")) %><br>
      <%= form.select :mandatory, options_for_select(["Select Priority", :mandatory, :optional], (@filters[:mandatory] || "Select Priority")) %><br>
      <%= form.select :category, options_for_select(["Select Category", :rest, :hobby, :chore], (@filters[:category] || "Select Category")) %><br><br>
      <%= form.submit "Filter Tasks", name: :filter, class: "btn btn-secondary rounded-pill" %>
      <% end %><br>
    <%= button_to "Clear Filters", tasks_path, method: :get, class: "btn btn-secondary rounded-pill" %>
  </div>
  
</div>

