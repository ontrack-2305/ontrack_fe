<%= button_to "All tasks", tasks_path, method: :get %>

<% # repurpose into a partial later? %>
<%= form_with url: tasks_path do |form| %>
  <%= form.label "Task name" %>
  <%= form.text_field :name %><br>

  <%= form.label "Task type" %>
  <%= form.select :type, options: ["", "Rest", "Hobby", "Chore"] %><br>

  <%= form.label "Mandatory?" %>
  <%= form.check_box :mandatory %><br>

  <%= form.label "Event date" %>
  <%= form.date_field :event_date %>

  <%= form.label "Frequency" %>
  <%= form.select :frequency, options: ["One Time", "Daily", "Weekly", "Monthly"] %><br>

  <%= form.label "Expected time needed" %>
  <%= form.number_field :hours %>H
  <%= form.number_field :minutes %>M<br>

  <%= form.label "Description" %>
  <%= form.text_field :description, size: "100", height: "100" %>
<% end %>