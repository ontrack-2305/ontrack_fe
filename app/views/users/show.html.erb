<h2>Welcome, <%= current_user.first_name %>!</h2>

<div style = "display: flex; justify-content: space-evenly;">
  <%= form_tag(dashboard_path, method: :get) do %>
    <%= hidden_field_tag :mood, 'good' %>
    <button class="good_button" type="submit">
      <img src="<%= asset_path('legit_happy.png') %>" alt="happy face button image">
    </button>
  <% end %>

  <%= form_tag(dashboard_path, method: :get) do %>
    <%= hidden_field_tag :mood, 'meh' %>
    <button class="meh_button" type="submit">
      <img src="<%= asset_path('legit_meh.png') %>" alt="meh face button image">
    </button>
  <% end %>

  <%= form_tag(dashboard_path, method: :get) do %>
    <%= hidden_field_tag :mood, 'bad' %>
    <button class="bad_button" type="submit">
      <img src="<%= asset_path('legit_sad.png') %>" alt="sad face button image">
    </button>
  <% end %>
</div>

<%= image_tag("postit_light.png", class: "mx-auto d-block img-fluid") %>


<%= link_to "Log Out", logout_path %>
